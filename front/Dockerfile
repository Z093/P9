# Ã‰tape 1 : build
FROM node:20-alpine AS build
WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .
RUN npm run build

# Ã‰tape 2 : nginx
FROM nginx:alpine
COPY --from=build /app/dist /usr/share/nginx/html

# ðŸ‘‡ Ajoute cette ligne pour inclure nginx.conf
COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
